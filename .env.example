# Environment Configuration for Second Brain
# Copy this file to .env and modify as needed

# REQUIRED: Path to your Obsidian vault
VAULT_PATH=C:\Users\YourName\Documents\ObsidianVault

# Database location (default: ./second_brain.db)
DATABASE_PATH=./second_brain.db

# File watcher debounce delay in seconds (default: 1.0)
DEBOUNCE_SECONDS=1.0

# API server settings
API_HOST=127.0.0.1
API_PORT=8000

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
